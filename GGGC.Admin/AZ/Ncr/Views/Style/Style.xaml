        </Border>

        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="restore" Property="Fill" Value="#FFFFFFFF"/>
                <Setter TargetName="restore" Property="Opacity" Value="100"/>
